        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hex_nav2"
            android:tabIndicator="@color/logo_color"
            android:tabIndicatorColor="@color/logo_color"
            android:tabInlineLabel="false"
            android:tabMode="fixed"
            app:tabIndicatorColor="@color/logo_color">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:icon="@drawable/home_icon" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/profile" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/event" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/hotspots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/hotspot" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/expenses" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/menu" />

        </com.google.android.material.tabs.TabLayout>
        <!-- </com.google.android.material.appbar.AppBarLayout> -->
</androidx.viewpager.widget.ViewPager>

